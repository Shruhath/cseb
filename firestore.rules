rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read for links
    match /links/{docId} {
      allow read: if true;
      // write only allowed to authenticated users present in admins collection
      allow create, update, delete: if request.auth != null
        && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    // Admins collection: allow read for authenticated users (to check admin status)
    // Write operations only allowed by existing admins
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
  }
}
